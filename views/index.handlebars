<h1>Burger-licious</h1>
<div class="row">
  <div class="col-md-6">
<h2>Hungry?</h2>

<ul class="burgerList">
  {{#each burgers}}
  {{#unless devoured}}
  <li>{{burger_name}}
    <button class ="change-devoured" value="{{id}}">Devour It!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-6">
<h2>Devoured</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>{{burger_name}}</li>
  {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
  <div class="col-md-12">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">What kind of burger would you like?</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>